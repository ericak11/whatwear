%h1 Listing items

%table
  %thead
    %tr
      %th Name
      %th Description
      %th Subcategory
      %th Designer
      %th Size
      %th Image
      %th Quantity
      %th Purchase date
      %th Closet
      %th
      %th
      %th

  %tbody
    - @items.each do |item|
      %tr
        %td= item.name
        %td= item.description
        %td= item.subcategory_id
        %td= item.designer
        %td= item.size
        %td= item.image
        %td= item.quantity
        %td= item.purchase_date
        %td= item.closet_id
        %td= link_to 'Show', item
        %td= link_to 'Edit', edit_item_path(item)
        %td= link_to 'Destroy', item, :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

= link_to 'New Item', new_item_path
