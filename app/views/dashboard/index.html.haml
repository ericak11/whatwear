%h1 Welcome #{@user.name}

%div
  %h2.ui.header
    %i.circular.home.icon
    %div.content
      Your Closets
      %div.sub.header
        = link_to new_closet_path, class: "" do
          Add a Closet

  - if @closets.present?
    %div.ui.four.doubling.cards
      - @closets.each do |closet|
        %div.card
          = link_to closet_path(closet), class: "image small" do
            - if closet.image.present?
              %img{src: "#{closet.image.url(:thumb) }"}
            - else
              %img{src: "/closet1.png"}
          %div.content
            %p.header= closet.name
            %div.meta= closet.location if closet.location.present?
    - if Closet.all.count > 8
      %br
      = link_to  closets_path , class: "ui right floated button" do
        %i.plus.icon
        See More
%br
%br
%div
  %h2.ui.header
    %i.circular.tags.icon
    %div.content
      Your Items
  - if @items.any?
    %p items
