<div class="ui two column middle aligned very relaxed stackable grid">
  <div class="column">
    <div class="ui form">
      <%= form_for :session, url: session_path do |form| %>
        <div class="field">
          <%= form.label :email %>
          <div class="ui left icon input">
            <%= form.text_field :email, type: 'email', placeholder: 'Email' %>
            <i class="user icon"></i>
          </div>
        </div>
        <div class="field">
          <%= form.label :password%>
          <div class="ui left icon input">
            <%= form.password_field :password, placeholder: 'Password' %>
            <i class="lock icon"></i>
          </div>
        </div>
        <%= form.submit class: "ui blue submit button"  %>
        <br>
        <br>
        <div class="other-links float-right">
          <%= link_to t(".forgot_password"), new_password_path, class: "btn btn-danger" %>
        </div>
      <% end %>

    </div>
  </div>
  <div class="ui vertical divider">
    Or
  </div>
  <div class="center aligned column">
      <%= link_to sign_up_path, class: "ui big green labeled icon button" do %>
        <i class="signup icon"></i>
        Sign Up
      <% end %>
  </div>
</div>
